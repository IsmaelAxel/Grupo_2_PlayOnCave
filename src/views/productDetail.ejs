<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

    <body>
        <%- include('partials/header') %>
            <main class="product__main">
                <article class="product__main--article">
                    <img src="/images/products/<%= images.find(image => image.main).file || `default_image.png` %>"
                        alt="">
                    <div class="product__main--article-info">
                        <% if (discount) { %>
                            <h4 class="index__main--article-lineProduct"> $<%=toThousand(price)%>
                            </h4>
                            <p>-<%= discount %>%</p>
                            <h4>$<%= toThousand(price-(price*discount/100).toFixed(0))%>
                            </h4>
                            <% } else { %>
                                <h4> $<%=toThousand(price)%>
                                </h4>
                                <% } %>
                    </div>
                    <a href="#"><button onclick="addItemToCart(1,'<%=id%>')" type="button" class="product__main--article-comprar"><i
                                class="fa-solid fa-cart-shopping"></i> COMPRAR </button></a>
                    <a href="#"><button  type="button" class="product__main--article-favoritos"><i
                                class="fa-regular fa-heart"></i> AÑADIR A LISTA DE DESEOS </button></a>
                </article>
                <div class="product__main--container">
                    <div class="product__main--slider">
                        <div class="product__main--slider-screen">
                            <img id="product_detail_imgs"
                                src="/images/products/<%= images.find(image => image.main).file || `default_image.png` %>"
                                alt="">
                        </div>
                        <div class="product__main--slider-imgs">
                           
                                <img src="/images/products/<%= images[0] ? images[0].file : 'default_image.png' %>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[0] ? images[0].file :  `default_image.png` %>')">
                                    <img src="/images/products/<%= images[1] ? images[1].file : 'default_image.png' %>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[1] ? images[1].file :  `default_image.png` %>')">
                                <img src="/images/products/<%= images[2] ? images[2].file : 'default_image.png' %>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[2] ? images[2].file :  `default_image.png` %>')">
                                <img class="slider1"
                                    src="/images/products/<%= images[3] ? images[3].file : 'default_image.png' %>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[3] ? images[3].file :  `default_image.png` %>')">
                                <img class="slider2"
                                    src="/images/products/<%=  images[4] ? images[4].file : 'default_image.png' %>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[4] ? images[4].file : `default_image.png` %>')">
                                <img class="slider3"
                                    src="/images/products/<%=  images[5] ? images[5].file : 'default_image.png'%>"
                                    alt=""
                                    onclick="document.getElementById('product_detail_imgs').setAttribute('src','/images/products/<%= images[5] ? images[5].file : `default_image.png` %>')">
                                
                        </div>
                    </div>
                    <div class="product__main--infoJuego">
                        <div class="product__main--infoJuego-titulo">
                            <h2>ACERCA DE ESTE JUEGO: <%= title %>
                            </h2>
                        </div>
                        <span class="product__main--infoJuego-ocultar" id="ocultarTexto">
                            <p>
                                <%= description %>
                            </p>
                        </span>
                        <div class="product__main--infoJuego-more"><a id="ocultarTextoBtn">LEER MÁS</a></div>
                    </div>
                    <div class="product__main--requisitos">
                        <div class="product__main--requisitos-logo">
                            <i class="fa-brands fa-windows"></i>
                        </div>
                        <div class="product__main--requisitos-flex">
                            <table class="product__main--requisitos--tableMinimos">
                                <tr>
                                    <th>Requisitos Minímos:</th>
                                </tr>
                                <tr>
                                    <th>OS:</th>
                                    <td>
                                        <%= minOs %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Procesador:</th>
                                    <td>
                                        <%= minProcessor %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Memoria:</th>
                                    <td>
                                        <%= minMemory %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Grafica:</th>
                                    <td>
                                        <%= minGraphicsCard %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Almacenamiento:</th>
                                    <td>
                                        <%= minDisk %>
                                    </td>
                                </tr>
                            </table>
                            <table class="product__main--requisitos--tableRecomendados">
                                <tr>
                                    <th class="product__main--requisitos--tableRecomendados-encabezado">Recomendados:
                                    </th>
                                </tr>
                                <tr>
                                    <th>OS:</th>
                                    <td>
                                        <%= recommendedOs %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Procesador:</th>
                                    <td>
                                        <%= recommendedProcessor %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Memoria:</th>
                                    <td>
                                        <%= recommendedMemory %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Grafica:</th>
                                    <td>
                                        <%= recommendedGraphicsCard %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Almacenamiento:</th>
                                    <td>
                                        <%= recommendedDisk %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
            <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>
            <%- include('partials/footer') %>
            <%- include('partials/scripts') %>
            <%- include('partials/nieve') %>
            <!-- nieve -->
    <button hidden class="nav-link snow-btn" type="button"></button>
            <script src="/javascripts/ocultarTexto.js"></script>
    </body>

</html>