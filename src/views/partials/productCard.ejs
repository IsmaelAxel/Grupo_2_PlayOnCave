<article class="index__main--article" data-aos="fade-down" data-aos-duration="1000">
    <a href="/products/productDetail/<%= id %>"><img src="/images/products/<%= MainImage || 'default_image.png' %>" alt=""></a>
    <div class="index__main--article-info">
        <% if (discount) { %>
            <h4 class="index__main--article-lineProduct"> $<%=toThousand(price)%></h4>
            <p>-<%= discount %>%</p>
            <h4>$<%= toThousand(price-(price*discount/100).toFixed(0))%></h4> 
        <% } else { %>
            <h4> $<%=toThousand(price)%></h4>
            <% }  %> 
         
    </div>
    <div class="index__main--article-comprar"><a href="/products/productCart"><button type="button"><i
                    class="fa-solid fa-cart-shopping"></i> COMPRAR</button></a>
    </div>
    <div class="index__main--article-verMas"><a href="/products/productDetail/<%= id%>"><button>
                VER M√ÅS</button></a></div>
</article>