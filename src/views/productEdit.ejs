<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{title: "Editar un producto"}) %>

    <body>
        <%- include('partials/header') %>
            <main class="productEdit">
                <div class="productEdit__box">
                    <h1>editar producto <%= title %>
                    </h1>
                    <form class="productEdit__box__form" action="/products/productUpdate/<%= id %>?_method=PUT"
                        method="POST" enctype="multipart/form-data">
                        <div class="productAdd__box__form--name">
                            <label for="title">Nombre del Producto:</label>
                            <input type="text" id="title" name="title" value ="<%= title %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.title && errors.title.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--category">
                            <label for="categoryId">Categoría:</label>
                            <select id="categoryId" name="categoryId" >
                                <option hidden>Seleccione una categoría</option>
                                  <option value="<%= categories[0].id %>" <%= categories[0].id === categoryId && 'selected'  %>>Destacados</option>
                                 <option value="<%= categories[1].id %>" <%= categories[1].id=== categoryId && 'selected'  %>>Nuevos Lanzamientos</option>
                                  <option value="<%= categories[2].id %>" <%= categories[2].id === categoryId && 'selected'  %>>Más Vendidos</option>
                                  </select>
                            <small class="text-danger ms-2"><%= locals.errors && (errors.category && errors.category.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--price">
                            <label for="price">Precio:</label>
                            <input type="number" id="price" name="price" placeholder="$" value="<%= price %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.price && errors.price.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--descuento">
                            <label for="discount">Descuento:</label>
                            <input type="number" id="discount" name="discount" placeholder="%" value="<%= discount %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.discount && errors.discount.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--requiMinimos">
                           <h3>Requisitos minimos</h3>
                           <label for="minOs">os:</label>
                            <input type="text" id="minOs" name="minOs" value="<%= minOs %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.minOs && errors.minOs.msg) %></small>
                            <label for="minProcessor">Procesador:</label>
                            <input type="text" id="minProcessor" name="minProcessor" value="<%= minProcessor %>" >
                            <small class="text-danger ms-2"><%= locals.errors && (errors.minProcessor && errors.minProcessor.msg) %></small>
                            <label for="minMemory">Memoria:</label>
                            <input type="text" id="minMemory" name="minMemory" value="<%= minMemory %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.minMemory && errors.minMemory.msg) %></small>
                            <label for="minGraphicsCard">Grafica:</label>
                            <input type="text" id="minGraphicsCard" name="minGraphicsCard" value="<%=minGraphicsCard %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.minGraphicsCard && errors.minGraphicsCard.msg) %></small>
                            <label for="minDisk">Almacenamiento:</label>
                            <input type="text" id="minDisk" name="minDisk" value="<%= minDisk %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.minDisk && errors.minDisk.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--requiRecomendados">
                            <h3>Requisitos recomendados</h3>
                            <label for="recommendedOs">os:</label>
                            <input type="text" id="recommendedOs" name="recommendedOs" value="<%= recommendedOs %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.recommendedOs && errors.recommendedOs.msg) %></small>
                            <label for="recommendedProcessor">Procesador:</label>
                            <input type="text" id="recommendedProcessor" name="recommendedProcessor" value="<%= recommendedProcessor %>" >
                            <small class="text-danger ms-2"><%= locals.errors && (errors.recommendedProcessor && errors.recommendedProcessor.msg) %></small>
                            <label for="recommendedMemory">Memoria:</label>
                            <input type="text" id="recommendedMemory" name="recommendedMemory" value="<%= recommendedMemory %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.recommendedMemory && errors.recommendedMemory.msg) %></small>
                            <label for="recommendedGraphicsCard">Grafica:</label>
                            <input type="text" id="recommendedGraphicsCard" name="recommendedGraphicsCard" value="<%= recommendedGraphicsCard %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.recommendedGraphicsCard && errors.recommendedGraphicsCard.msg) %></small>
                            <label for="recommendedDisk">Almacenamiento:</label>
                            <input type="text" id="recommendedDisk" name="recommendedDisk" value="<%= recommendedDisk %>">
                            <small class="text-danger ms-2"><%= locals.errors && (errors.recommendedDisk && errors.recommendedDisk.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--description">
                            <label for="description">Descripción:</label>
                            <textarea class="productAdd__box__form__description--text" id="description" name="description"><%=description %></textarea>
                            <small class="text-danger ms-2"><%= locals.errors && (errors.description && errors.description.msg) %></small>
                        </div>
                        <div class="productAdd__box__form--image">
                            <label for="mainImage" class="btn btn-dark" >Imagen Principal:</label>
                            <input class="productAdd__box__image--img" type="file" id="mainImage" name="mainImage"  hidden>
                            <small class="text-danger ms-2"><%= locals.errors && (errors.mainImage && errors.mainImage.msg) %></small>
                        </div>
                        <div>
                        <label for="images" class="btn btn-dark">Imagenes Secundarias:</label>
                        <input class="productAdd__box__image--img" multiple type="file" id="images" name="images"  hidden>
                        <small class="text-danger ms-2"> <%= locals.errors && (errors.images && errors.images.msg) %></small>
                         </div>
                        <div class="productAdd__box__form--btn">
                            <button class="productAdd__box__form--btn--clear" type="reset">CLEAR</button>
                            <button class="productAdd__box__form--btn--cargar" type="submit">CARGAR</button>
                        </div>
                    </form>
                </div>
            </main>
            <%- include('partials/footer') %>
            <%- include('partials/scripts') %>
    </body>

</html>