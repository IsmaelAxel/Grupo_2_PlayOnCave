<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: "admin" }) %>

    <body class="">
        <%- include('partials/header') %>

            <main class="container">
                <div class="row">
                    <div class="col-12 col-lg-10 mx-auto mt-5 mb-5">
                        <div class="card  bg-dark">

                            <div class="card-header d-flex text-white bg-secondary justify-content-between">

                                <ul class="breadcrumb fs-4 ">
                                    <li class="breadcrumb-item fw-bold  "><a class="text-reset" href="/">Home</a></li>
                                    <li class="breadcrumb-item fw-bold active  "><a class="text-dark "
                                            href="/users/admin">Admin</a></li>
                                    <li class="breadcrumb-item fw-bold  "> <a class="text-reset"
                                            href="/products/productAdd">Nuevo producto</a></li>
                                </ul>
                                <div>
                                    <form id="form_search" class="home_header_box--form" action="admin/search2"
                                        method="get">
                                        <input id="input_search" class="home_header_box--form--input" name="keywords"
                                            type="text" placeholder="Buscar productos, marcas">
                                        <div class="home_header_box--btn">
                                            <button class="home_header_box--button" type="submit"><i
                                                    class="fa-solid fa-magnifying-glass"></i></button>
                                        </div>
                                    </form>
                                </div>
                                <div class="pagination mx-4 d-flex justify-content-center">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <% if (pages.length) { %>
                                                <% if (currentPage !==1) { %>

                                                    <li class="page-item"> <a
                                                            href="<%= paginate.href({ page: currentPage - 1 }) %>"
                                                            class="page-link"><i class="fa fa-angle-left"></i>Prev</a>
                                                    </li>
                                                    <% } %>
                                                        <% pages.forEach(page=> { %>
                                                            <li class="page-number">
                                                                <a href="<%= page.url %>"
                                                                    class="page-link <%= page.number === currentPage && 'active' %>">
                                                                    <%= page.number %>
                                                                </a>
                                                            </li>
                                                            <% }); %>
                                                                <% if (currentPage !==currentPage.length) { %>
                                                                    <li class="page-item">
                                                                        <a href="<%= paginate.href({ page: currentPage + 1 }) %>"
                                                                            class="page-link">
                                                                            Next <i class="fa fa-angle-right"></i>
                                                                        </a>
                                                                    </li>

                                                                    <% } %>
                                                                        <% } %>
                                        </ul>
                                    </nav>
                                </div>

                            </div>

                            <div class="card-body">
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab"
                                            data-bs-target="#home" type="button" role="tab" aria-controls="home"
                                            aria-selected="true">Productos</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                                            data-bs-target="#profile" type="button" role="tab" aria-controls="profile"
                                            aria-selected="false">Categorias</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab"
                                            data-bs-target="#contact" type="button" role="tab" aria-controls="contact"
                                            aria-selected="false">Usuarios</button>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel"
                                        aria-labelledby="home-tab">
                                        <%- include('partials/tableProducts',{ ...products.dataValues }) %>
                                    </div>
                                    <div class="tab-pane fade" id="profile" role="tabpanel"
                                        aria-labelledby="profile-tab">

                                    </div>
                                    <div class="tab-pane fade" id="contact" role="tabpanel"
                                        aria-labelledby="contact-tab">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-dark">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">nombre</th>
                                                        <th scope="col">apellido</th>
                                                        <th scope="col">email</th>
                                                        <th scope="col">rol</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% users.forEach(({id, name ,surname, email,roleId},index)=> { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1 %>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            <td>
                                                                <%= surname %>
                                                            </td>
                                                            <td>
                                                                <%=email %>
                                                            </td>

                                                            <% if (roleId===1) { %>
                                                                <td>
                                                                    Admin
                                                                </td>
                                                                <% } else {%>
                                                                    <td>
                                                                        Usuario
                                                                    </td>
                                                                    <% } %>
                                                                        <td>
                                                                            <div class="d-flex gap-1">

                                                                                <button type="button"
                                                                                    class="btn btn-sm btn-primary"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#detailProduct<%=id%>">
                                                                                    <i class="fas fa-eye"></i>
                                                                                </button>

                                                                                <div class="modal fade"
                                                                                    id="detailProduct<%=id%>"
                                                                                    tabindex="-1"
                                                                                    aria-labelledby="detailProduct<%=id%>Label"
                                                                                    aria-hidden="true">
                                                                                    <div
                                                                                        class="modal-dialog  modal-dialog-centered">
                                                                                        <div class="modal-content">
                                                                                            <div class="modal-header">
                                                                                                <h5 class="modal-title"
                                                                                                    id="detailProduct<%=id%>Label">
                                                                                                    <%= name %>
                                                                                                </h5>
                                                                                                <button type="button"
                                                                                                    class="btn-close"
                                                                                                    data-bs-dismiss="modal"
                                                                                                    aria-label="Close"></button>
                                                                                            </div>
                                                                                            <div class="modal-body">
                                                                                                <div
                                                                                                    class="card mb-3 bg-dark text-white">
                                                                                                    <div
                                                                                                        class="row col-sm-12">

                                                                                                        <div class="">
                                                                                                            <div
                                                                                                                class="card-body">
                                                                                                                <h5
                                                                                                                    class="card-title">
                                                                                                                    <%= name
                                                                                                                        %>
                                                                                                                </h5>
                                                                                                                <p
                                                                                                                    class="card-text">

                                                                                                                </p>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>
                                                                                            <div class="modal-footer">
                                                                                                <button type="button"
                                                                                                    class="btn btn-secondary"
                                                                                                    data-bs-dismiss="modal">Cerrar</button>

                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <a class="btn btn-sm btn-success"
                                                                                    href="/products/productEdit/<%= id %>"><i
                                                                                        class="fas fa-edit"></i></a>

                                                                                <!-- Button trigger modal -->
                                                                                <button type="button"
                                                                                    class="btn btn-sm btn-danger"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#removeProduct<%= id %>">
                                                                                    <i class="fas fa-trash"></i>
                                                                                </button>

                                                                                <!-- Modal -->
                                                                                <div class="modal fade"
                                                                                    id="removeProduct<%= id %>"
                                                                                    tabindex="-1"
                                                                                    aria-labelledby="removeProduct<%= id %>Label"
                                                                                    aria-hidden="true">
                                                                                    <div
                                                                                        class="modal-dialog modal-dialog-centered">
                                                                                        <div class="modal-content">
                                                                                            <div class="modal-header">
                                                                                                <h1 class="modal-title fs-5"
                                                                                                    id="removeProduct<%= id %>Label">
                                                                                                    ADVERTENCIA</h1>
                                                                                                <button type="button"
                                                                                                    class="btn-close"
                                                                                                    data-bs-dismiss="modal"
                                                                                                    aria-label="Close"></button>
                                                                                            </div>
                                                                                            <div class="modal-body">
                                                                                                <p>Estás seguro que
                                                                                                    querés eliminar el
                                                                                                    producto <b>
                                                                                                        <%= name %>
                                                                                                    </b></p>
                                                                                            </div>
                                                                                            <div class="modal-footer">
                                                                                                <button type="button"
                                                                                                    class="btn btn-secondary"
                                                                                                    data-bs-dismiss="modal">Cancelar</button>
                                                                                                <form
                                                                                                    action="/products/delete/<%= id %>?_method=DELETE"
                                                                                                    method="POST">
                                                                                                    <button
                                                                                                        type="submit"
                                                                                                        class="btn btn-danger">Eliminalo</button>
                                                                                                </form>

                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </main>
            <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>
            <%- include('partials/footer') %>
                <%- include('partials/scripts') %>
    </body>
</html>